<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/headerFiles", { pageTitle: "Products" }) %>
</head>

<body>
  <%- include("partials/header") %>

  <main class="container my-5">
    <div class="text-center mb-5">
      <p class="eyebrow">Weekly harvest</p>
      <h2>Seasonal produce you can trust</h2>
      <p class="text-muted">All prices include doorstep delivery within city limits.</p>
    </div>

    <div class="row g-4">
      <% products.forEach(p => { %>
        <div class="col-md-6 col-xl-4">
          <article class="product-card h-100">
            <div class="ratio ratio-4x3 mb-3">
              <img src="<%= p.image %>" alt="<%= p.title %>" class="product-image rounded-4">
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h5 class="mb-0"><%= p.title %></h5>
              <span class="badge text-bg-success"><%= p.price %></span>
            </div>
            <p class="text-muted mb-4"><%= p.description %></p>
            <button class="btn btn-outline-success w-100" type="button" data-product="<%= p.title %>">Add to basket</button>
          </article>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include("partials/footer") %>
</body>
</html>
